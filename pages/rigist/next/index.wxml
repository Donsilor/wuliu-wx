<!--pages/rigist/next/index.wxml-->
<view class="container">
  <view class="title">完善信息</view>
  <view class="tit">填写真实完善的信息，有助于更快的询价、报价</view>
  <view class="box">
    <view class="list">
      <view class="fl left">真实姓名</view>
      <view class="fr">
        <input class="ipt" placeholder="请输入真实姓名" placeholder-style="color: #999"></input>
      </view>
    </view>

    <!-- 根据账户类型显示隐藏 -->
    <view class="list" wx:if="1">
      <view class="fl left">公司名称</view>
      <view class="fr">
        <input class="ipt" placeholder="请输入公司名称" placeholder-style="color: #999"></input>
      </view>
    </view>

    <view class="list">
      <view class="fl left">常用邮箱</view>
      <view class="fr">
        <input class="ipt" placeholder="请输入常用邮箱" placeholder-style="color: #999"></input>
      </view>
    </view>
  </view>
  <view class="btn">保存</view>
</view>
