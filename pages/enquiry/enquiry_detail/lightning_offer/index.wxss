/* pages/enquiry/enquiry_detail/lightning_offer/index.wxss */
.channel{
  height: 90rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  line-height: 86rpx;
  margin-top: 20rpx;
  border-bottom: 1px solid #eee;
}
.channel .left{
  font-size: 30rpx;
  color: #000;
}
.channel .right{
  font-size: 30rpx;
  color: #999;
}
.channel .right .iconfont{
  margin-left: 10rpx;
}

.scope{
  height: 90rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  border: 1px solid transparent;
  line-height: 86rpx;
}
.scope .left{
  font-size: 30rpx;
  color: #000;
}
.scope .right{
  font-size: 30rpx;
  color: #999;
  height: 90rpx;
}

.scope .ipt{
  width: 108rpx;
  height: 90rpx;
  margin: 0 20rpx;
  text-align: right;
  color: #333;
}
.scope .line{
  margin-left: 50rpx;
}

.explain{
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
}
.explain .tit{
  height: 88rpx;
  font-size: 30rpx;
  color: #000;
  line-height: 88rpx;
}
.explain .textarea{
  width: 100%;
  height: 280rpx;
  padding: 20rpx;
  box-sizing: border-box;
  resize: none;
  border: 1px solid #ddd;
  font-size: 30rpx;
}

.isShow{
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 120rpx;
  padding: 36rpx;
  box-sizing: border-box;
  font-size: 22rpx;
  color: #999;
  line-height: 24rpx;
}

.btn{
  position: fixed;
  left: 30rpx;
  bottom: 50rpx;
  width: 690rpx;
  height: 80rpx;
  background-color: #ff6305;
  border-radius: 5rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 31rpx;
  color: #f3f3f3;
}