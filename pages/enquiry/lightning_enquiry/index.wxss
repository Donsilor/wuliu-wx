/* pages/enquiry/lightning_enquiry/index.wxss */
.enquiry{
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 20rpx;
}

.enquiry .from,
.enquiry .to{
  height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}
.enquiry .icon{
  width: 34rpx;
  height: 34rpx;
  text-align: center;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #58abf9;
  border-radius: 4rpx;
  margin-right: 30rpx;
}

.enquiry .to .icon{
  background-color: #ff6305;
}

.enquiry .ipt{
  width: 626rpx;
  height: 90rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}

.pull_in{
  background-color: #fff;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
}
.pull_in .list{
  height: 90rpx;
  line-height: 90rpx;
}
.pull_in .list:not(:last-of-type){
  border-bottom: 1rpx solid #eee;
}
.pull_in .left{
  width: 120rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
}
.pull_in .right{
  width: 542rpx;
  height: 80rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #999;
}
.pull_in .right.active{
  color: #666;
}
.pull_in .right .iconfont{
  color: #ccc;
  margin-left: 10rpx;
}
.pull_in .ipt{
  width: 480rpx;
  height: 90rpx;
  box-sizing: border-box;
  color: #666;
}
.isShow{
  height: 90rpx
}

.isShow .circle{
  margin-top: 32rpx;
}
.margin_left .circle{
  margin-left: 30rpx;
}
.textarea{
  width: 100%;
  height: 280rpx;
  border: 1rpx solid #ddd;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #666;
}

.btn{
  width: 690rpx;
  height: 80rpx;
  background-color: #ff6305;
  border-radius: 5rpx;
  font-size: 31rpx;
  color: #f3f3f3;
  line-height: 80rpx;
  text-align: center;
  margin: 60rpx auto 50rpx;
}

.picker{
  width: 100%;
  height: 90rpx;
}