/* pages/offer/index.wxss */
.tab{
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
  line-height: 70rpx;
}
.swiper_item{
  width: auto !important;
  height: 90rpx;
  padding-right: 60rpx;
  font-size: 28rpx;
  color: #333;
}
.tab_list{
  position: relative;
}
.tab_list .line{
  position: absolute;
  top: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90rpx;
  height: 4rpx;
  background-color: #fff;
  border-radius: 2rpx;
}
.active .tab_list .line{
  background-color: #ff6305;
}
.search{
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 20rpx;
}

.search .from,
.search .to{
  height: 90rpx;
  display: flex;
  align-items: center;
}
.search .icon{
  width: 34rpx;
  height: 34rpx;
  text-align: center;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #58abf9;
  border-radius: 4rpx;
  margin-right: 30rpx;
}

.search .to .icon{
  background-color: #ff6305;
}

.search .ipt{
  width: 626rpx;
  height: 90rpx;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
  font-size: 30rpx;
}

.search .btn{
  width: 100%;
  height: 80rpx;
  background-color: #ff6305;
  border-radius: 5rpx;
  font-size: 30rpx;
  color: #f3f3f3;
  line-height: 80rpx;
  text-align: center;
  margin-top: 60rpx;
}

.search .sort{
  padding: 0 96rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 84rpx;
}

.sort .active{
  color: #ff6305;
}

.sort_list{
  height: 84rpx;
  line-height: 84rpx;
  font-size: 24rpx;
  color: #999;
}

.offer{
  margin-top: 30rpx;
}

.offer .offer_list{
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.offer_list .location{
  height: 106rpx;
  line-height: 106rpx;
  font-size: 30rpx;
  color: #333;
}
.location_l{
  width: 200rpx;
  box-sizing: border-box;
}
.location_r{
  width: 200rpx;
  box-sizing: border-box;
  text-align: right;
}
.location .line{
  position: relative;
  width: 210rpx;
  height: 1rpx;
  margin: 56rpx 40rpx;
  border-bottom: 4rpx solid #ddd;
}
.location .line .time{
  position: absolute;
  top: -70rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 22rpx;
  color: #666;
}

.price{
  background-color: #fff8f4;
  height: 160rpx;
}
.price .price_list{
  width: 33.33%;
  height: 160rpx;
  padding: 20rpx 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.price_list .measure{
  max-width: 100%;
  font-size: 30rpx;
  color: #999;
}
.price_list .price_numb{
  max-width: 100%;
  font-size: 30rpx;
  color: #333;
}

.price_mid{
  position: relative;
}
.price_mid .line_box{
  position: absolute;
  left: 0;
  top: 45rpx;
  width: 100%;
  height: 70rpx;
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
}

.contact{
  height: 84rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  color: #999;
}
.contact .left{
  max-width: 260rpx;
}
.contact .right{
  max-width: 260rpx;
}