/* pages/my/offer_manage/index.wxss */
.tab{
  height: 80rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 26rpx;
  color: #333;
}
.tab .color{
  color: #ff6305;
}
.tit{
  height: 76rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  line-height: 82rpx;
  font-size: 28rpx;
  color: #999;
}
.offer{
  margin-bottom: 30rpx;
}

.offer .offer_list{
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.offer_list .location{
  height: 106rpx;
  line-height: 106rpx;
  font-size: 30rpx;
  color: #333;
}
.location_l{
  width: 200rpx;
  box-sizing: border-box;
}
.location_r{
  width: 200rpx;
  box-sizing: border-box;
  text-align: right;
}
.location .line{
  position: relative;
  width: 210rpx;
  height: 1rpx;
  margin: 56rpx 40rpx;
  border-bottom: 4rpx solid #ddd;
}
.location .line .time{
  position: absolute;
  top: -70rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 22rpx;
  color: #666;
}

.price{
  background-color: #fff8f4;
  height: 160rpx;
}
.price .price_list{
  width: 33.33%;
  height: 160rpx;
  padding: 20rpx 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.price_list .measure{
  max-width: 100%;
  font-size: 30rpx;
  color: #999;
}
.price_list .price_numb{
  max-width: 100%;
  font-size: 30rpx;
  color: #333;
}

.price_mid{
  position: relative;
}
.price_mid .line_box{
  position: absolute;
  left: 0;
  top: 45rpx;
  width: 100%;
  height: 70rpx;
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
}