/* pages/my/collect/index.wxss */
.container{
  padding: 30rpx 0;
}
.list{
  height: 142rpx;
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.location{
  font-size: 28rpx;
  color: #4c4c4c;
  margin-bottom: 20rpx
}
.location .from{
	width: 94rpx;
}
.location .line{
	width: 132rpx;
	height: 8rpx;
	background: url("https://szdbi.oss-cn-shenzhen.aliyuncs.com/guojiwuliu/home/img_transport%402x.png") no-repeat center;
	background-size: 100% 100%;
  margin: 14rpx 20rpx;
}
.location .to{
	max-width: 120rpx;
  margin: 0 20rpx 0 32rpx;
}
.type{
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx
}
.list .right{
  width: 126rpx;
  height: 40rpx;
  border: 1rpx solid #ff6305;
  border-radius: 20rpx;
  color: #ff6305;
  text-align: center;
  line-height: 40rpx;
}
.list .time{
  font-size: 24rpx;
  color: #999;
}
.list .time span{
  margin-right: 12rpx;
}

.empty{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background-color: #fff;
}
.empty .bg_box{
  position: absolute;
  left: 7rpx;
  top: 20%;
  width: 734rpx;
  height: 196rpx;
  background: url("https://szdbi.oss-cn-shenzhen.aliyuncs.com/guojiwuliu/img_blankpages%402x.png") no-repeat center;
  background-size: 100% 100%;
}
.empty .text{
  position: absolute;
  left: 0;
  top: 38%;
  width: 100%;
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
}