/* 单选按钮 */

.isShow .circle{
  position: relative;
  width: 26rpx;
  height: 26rpx;
  border: 1rpx solid #aaa;
  border-radius: 50%;
  margin-right: 10rpx;
  box-sizing: border-box;
}
.isShow .icon{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 18rpx;
  height: 18rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
}

.active .circle{
  border-color: #ff6305;
}
.active .icon{
  background-color: #ff6305;
}
